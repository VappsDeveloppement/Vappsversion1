
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     * @returns {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    // Allow public read for agency personalization, but restrict write access
    match /agencies/{agencyId} {
      allow get: if true;
      allow list, write, update, delete: if isSignedIn();
    }
    
    match /users/{userId}/{path=**} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Fallback for other collections. This is for development.
    // Secure these rules before production.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
