
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // RÈGLES OUVERTES POUR LE DÉVELOPPEMENT
    // N'importe quel utilisateur connecté peut lire et écrire partout.
    // Il faudra sécuriser ces règles avant la mise en production.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
