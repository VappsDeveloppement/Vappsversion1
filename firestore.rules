
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     * @returns {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    // WARNING: DEVELOPMENT ONLY
    // These rules are insecure and allow any authenticated user to read/write anywhere.
    // This is to facilitate rapid development of the application model.
    // These rules MUST be replaced with granular, secure rules before production.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
