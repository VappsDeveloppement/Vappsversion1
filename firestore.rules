
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Règles Publiques Spécifiques ---

    // Permet à n'importe qui de créer une candidature (formulaire public)
    match /job_applications/{applicationId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // Permet à n'importe qui de créer un message de contact (formulaire public)
    match /contact_messages/{messageId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // Permet à n'importe qui de lire un devis public et de le mettre à jour (pour signature/refus)
    match /quotes/{quoteId} {
      allow read: if true;
      allow update: if request.auth == null && resource.data.status != write.resource.data.status;
    }
    
    // Permet la lecture publique des formulaires
    match /public_forms/{formId} {
        allow read: if true;
        allow write: if request.auth != null; // Seuls les users auth peuvent créer/modifier
    }

    // Permet à n'importe qui de soumettre une réponse à un formulaire
    match /public_forms/{formId}/submissions/{submissionId} {
        allow create: if true;
        allow read, update, delete: if request.auth != null;
    }
    
    // --- Règles Générales ---
    // Cette règle s'applique à toutes les autres collections qui n'ont pas de règle spécifique.
    match /{document=**} {
      allow read: if true; // Permet la lecture publique (mini-sites, articles, etc.)
      allow write: if request.auth != null; // Requiert une authentification pour toute écriture
    }
  }
}
