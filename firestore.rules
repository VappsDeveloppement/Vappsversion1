

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     * @returns {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    // Allow public read for agency personalization, but restrict write access
    match /agencies/{agencyId} {
      allow get: if true;
      allow list, write, update, delete: if isSignedIn();

      // Allow public read for plans, but restrict write access
      match /plans/{planId} {
        allow get, list: if true;
        allow write, update, delete: if isSignedIn();
      }
      
      // Allow public access to view quotes but restrict modification of accepted quotes.
      match /quotes/{quoteId} {
        allow get, list: if true;
        allow write, create: if isSignedIn();
        allow update: if isSignedIn() && resource.data.status != 'accepted';
        allow delete: if isSignedIn() && !(exists(/databases/$(database)/documents/agencies/$(agencyId)/invoices/$(resource.id)) && get(/databases/$(database)/documents/agencies/$(agencyId)/invoices/$(resource.id)).data.status == 'paid');

      }

      match /contracts/{contractId} {
        allow get, list: if isSignedIn();
        allow write, update, delete: if isSignedIn();
      }

      match /invoices/{invoiceId} {
        allow get, list, write, update, delete: if isSignedIn();
      }
    }
    
    // GDPR requests can be created by anyone (public form), but only read/managed by admins
    match /gdpr_requests/{requestId} {
        allow create: if true;
        allow read, write, update, delete: if isSignedIn();
    }
    
    match /users/{userId}/{path=**} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Fallback for other collections. This is for development.
    // Secure these rules before production.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}

