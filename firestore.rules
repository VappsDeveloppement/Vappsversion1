

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     * @returns {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is a superadmin. This is the master key.
     * @returns {boolean} True if the user has the 'superadmin' role.
     */
     function isSuperAdmin() {
       return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
     }

    /**
     * @description Checks if the user is an admin for a specific agency.
     * @param {string} agencyId - The ID of the agency to check against.
     * @returns {boolean} True if a membership document exists linking the user to the agency with an 'admin' or 'dpo' role.
     */
    function isAgencyAdmin(agencyId) {
      let membershipPath = /databases/$(database)/documents/memberships/$(request.auth.uid + '_' + agencyId);
      return isSignedIn() && exists(membershipPath) && (
        get(membershipPath).data.role == 'admin' ||
        get(membershipPath).data.role == 'dpo'
      );
    }
    
    /**
     * @description Checks if the user is a member of a specific agency (any role).
     * @param {string} agencyId - The ID of the agency to check against.
     * @returns {boolean} True if a membership document exists linking the user to the agency.
     */
    function isAgencyMember(agencyId) {
       let membershipPath = /databases/$(database)/documents/memberships/$(request.auth.uid + '_' + agencyId);
      return isSignedIn() && exists(membershipPath);
    }

    // Allow public read for agency personalization, but restrict write access
    match /agencies/{agencyId} {
      allow get: if true;
      allow list, write, update, delete: if isSuperAdmin() || isAgencyAdmin(agencyId);

      // Allow public read for plans, but restrict write access
      match /plans/{planId} {
        allow get, list: if true;
        allow write, update, delete: if isSuperAdmin() || isAgencyAdmin(agencyId);
      }
      
      // Allow public access to view quotes but restrict modification of accepted quotes.
      match /quotes/{quoteId} {
        allow get, list: if true;
        allow create: if isSuperAdmin() || isAgencyAdmin(agencyId);
        allow update: if (isSuperAdmin() || isAgencyAdmin(agencyId)) && resource.data.status != 'accepted';
        allow delete: if (isSuperAdmin() || isAgencyAdmin(agencyId)) && !(existsAfter(/databases/$(database)/documents/agencies/$(agencyId)/invoices/$(resource.id)) && getAfter(/databases/$(database)/documents/agencies/$(agencyId)/invoices/$(resource.id)).data.status == 'paid');

      }

      match /contracts/{contractId} {
        allow get, list: if isSuperAdmin() || isAgencyAdmin(agencyId);
        allow create, write, update, delete: if isSuperAdmin() || isAgencyAdmin(agencyId);
      }

      match /invoices/{invoiceId} {
        allow get, list, write, update, delete: if isSuperAdmin() || isAgencyAdmin(agencyId);
      }
    }
    
    // GDPR requests can be created by anyone, but only read/managed by admins of the concerned agency
    match /gdpr_requests/{requestId} {
        allow create: if true;
        allow list: if isSuperAdmin() || (isSignedIn() && isAgencyMember(request.query.agencyId));
        allow read, write, update, delete: if isSuperAdmin() || isAgencyAdmin(request.resource.data.agencyId) || isAgencyAdmin(resource.data.agencyId);
    }
    
    // Support requests can be created by any signed-in user and are managed by superadmins
    match /support_requests/{requestId} {
      allow create: if isSignedIn();
      allow list, read, write, update, delete: if isSuperAdmin();
    }
    
    // FAQ items can be read by anyone if general, or by agency members if specific
    match /faq_items/{itemId} {
      allow get: if true; // Public read access for individual items
      allow list: if isSignedIn(); // Allow listing for signed-in users (will be filtered on client)
      allow write: if isSuperAdmin() || isAgencyAdmin(request.resource.data.agencyId);
      allow update, delete: if isSuperAdmin() || isAgencyAdmin(resource.data.agencyId);
    }
    
     // Rules for memberships
    match /memberships/{membershipId} {
      // Allow list only for superadmins or admins of the specific agency
      allow list: if isSuperAdmin() || (isSignedIn() && isAgencyAdmin(request.query.agencyId));
      
      // Allow read for superadmins or the user themselves if it's their own membership
      allow get: if isSuperAdmin() || (isSignedIn() && membershipId.startsWith(request.auth.uid));
      
      // Allow create/delete/update for superadmins or admins of the agency
      allow write: if isSuperAdmin() || (isSignedIn() && (
        isAgencyAdmin(request.resource.data.agencyId) || isAgencyAdmin(resource.data.agencyId)
      ));
    }
    
    match /users/{userId} {
      // Superadmins and Admins can list all users.
      allow list: if isSignedIn() && (isSuperAdmin() || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');

      // Superadmins can do anything to any user.
      allow read, write: if isSuperAdmin();
      
      // An admin can read any user profile. Writing is handled below.
      allow read: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // A user can read their own profile.
      allow get: if isSignedIn() && request.auth.uid == userId;
      
      // A user can update their own profile, but cannot change their role.
      allow update: if isSignedIn() && request.auth.uid == userId 
                      && request.resource.data.role == resource.data.role;
    }
    
    match /users/{userId}/{path=**} {
      // Superadmins have access to subcollections.
      allow read, write: if isSuperAdmin();
      // Users can access their own subcollections.
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Fallback for other collections. This is for development.
    // Secure these rules before production.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}

