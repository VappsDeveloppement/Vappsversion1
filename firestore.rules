
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ATTENTION: RÈGLES COMPLÈTEMENT OUVERTES
    // N'importe qui (connecté ou non) peut lire et écrire partout.
    // Ces règles sont dangereuses et ne doivent pas être utilisées en production.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
