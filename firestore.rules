
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     * @returns {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    // During development, allow any signed-in user to read/write anywhere.
    // This removes permission blockers while building the application model.
    // WARNING: This is insecure and MUST be replaced with granular rules before production.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }

    // Exception for the agency document, which needs to be public for personalization
    // even for non-authenticated users.
    match /agencies/{agencyId} {
      allow get: if true;
      allow list, write: if isSignedIn();
    }
  }
}
