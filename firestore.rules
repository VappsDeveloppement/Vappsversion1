
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read for agency info and minisites
    match /agencies/{agencyId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /minisites/{counselorId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == counselorId;
    }

    // Secure other collections to authenticated users
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /plans/{planId} {
        allow read: if true; // Plans can be public for pricing pages
        allow write: if request.auth != null; // Only authenticated (admin/conseiller) can write
    }

    match /contracts/{contractId} {
      allow read, write: if request.auth != null;
    }

    match /quotes/{quoteId} {
      // The public quote page handles its own logic, but general access is restricted
      allow read, write: if true; // Allow public read for validation page
    }
    
    match /invoices/{invoiceId} {
       allow read, write: if request.auth != null;
    }

    match /gdpr_requests/{requestId} {
        allow read, write: if request.auth != null;
    }

    match /support_requests/{requestId} {
        allow read, write: if request.auth != null;
    }

    match /faq_items/{itemId} {
        allow read: if true;
        allow write: if request.auth != null;
    }
  }
}
