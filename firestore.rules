
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     * @returns {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is a superadmin. This is the master key.
     * @returns {boolean} True if the user has the 'superadmin' role.
     */
     function isSuperAdmin() {
       // This function only checks the role from the user's document.
       // It's the most reliable way to confirm super admin status.
       return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
     }

    /**
     * @description Checks if the user is an admin for the given agency OR a superadmin.
     * A superadmin has universal agency access.
     * @returns {boolean} True if the user has admin-level access for the agency.
     */
     function isAgencyAdmin(agencyId) {
       // A superadmin bypasses any agencyId check. This is the master key rule.
       if (isSuperAdmin()) {
         return true;
       }
       // An agency admin only has access to their own agency.
       let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
       return isSignedIn() && userDoc.agencyId == agencyId && (userDoc.role == 'admin' || userDoc.role == 'dpo');
     }
     
    /**
     * @description Checks if the user is a staff member (conseiller, admin, dpo, superadmin).
     * @returns {boolean} True if the user is a staff member.
     */
    function isStaff() {
        let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
        return isSignedIn() && (userDoc.role == 'conseiller' || userDoc.role == 'admin' || userDoc.role == 'dpo' || userDoc.role == 'superadmin');
    }


    // Allow public read for agency personalization, but restrict write access
    match /agencies/{agencyId} {
      allow get: if true;
      allow list, write, update, delete: if isAgencyAdmin(agencyId);

      // Allow public read for plans, but restrict write access
      match /plans/{planId} {
        allow get, list: if true;
        allow write, update, delete: if isAgencyAdmin(agencyId);
      }
      
      // Allow public access to view quotes but restrict modification of accepted quotes.
      match /quotes/{quoteId} {
        allow get, list: if true;
        allow create: if isAgencyAdmin(agencyId);
        allow update: if isAgencyAdmin(agencyId) && resource.data.status != 'accepted';
        allow delete: if isAgencyAdmin(agencyId) && !(existsAfter(/databases/$(database)/documents/agencies/$(agencyId)/invoices/$(resource.id)) && getAfter(/databases/$(database)/documents/agencies/$(agencyId)/invoices/$(resource.id)).data.status == 'paid');

      }

      match /contracts/{contractId} {
        allow get, list: if isAgencyAdmin(agencyId);
        allow create, write, update, delete: if isAgencyAdmin(agencyId);
      }

      match /invoices/{invoiceId} {
        allow get, list, write, update, delete: if isAgencyAdmin(agencyId);
      }
    }
    
    // GDPR requests can be created by anyone, but only read/managed by admins of the concerned agency
    match /gdpr_requests/{requestId} {
        allow create: if true;
        // Allow listing only if it's for the user's agency or if the user is a superadmin
        allow list: if isSuperAdmin() || (isSignedIn() && request.query.agencyId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.agencyId);
        allow read, write, update, delete: if isAgencyAdmin(request.resource.data.agencyId) || isAgencyAdmin(resource.data.agencyId);
    }
    
    // Support requests can be created by any signed-in user and are managed by superadmins
    match /support_requests/{requestId} {
      allow create: if isSignedIn();
      allow list, read, write, update, delete: if isSuperAdmin();
    }
    
    // FAQ items can be read by anyone if general, or by agency members if specific
    match /faq_items/{itemId} {
      allow get: if true; // Public read access for individual items
      allow list: if isSignedIn(); // Allow listing for signed-in users (will be filtered on client)
      allow write: if isAgencyAdmin(request.resource.data.agencyId) || isSuperAdmin();
      allow update, delete: if isAgencyAdmin(resource.data.agencyId) || isSuperAdmin();
    }
    
    match /users/{userId} {
      // Superadmins and Admins can list all users. This is critical for the user management page.
      allow list: if isSuperAdmin() || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      // Superadmins can do anything to any user.
      allow read, write: if isSuperAdmin();
      
      // Admins can manage all users within their agency.
      allow read, write: if isAgencyAdmin(get(/databases/$(database)/documents/users/$(userId)).data.agencyId);
      
      // A user can read their own profile.
      allow get: if isSignedIn() && request.auth.uid == userId;
      
      // A user can update their own profile, but cannot change their role or agencyId.
      allow update: if isSignedIn() && request.auth.uid == userId 
                      && request.resource.data.role == resource.data.role
                      && request.resource.data.agencyId == resource.data.agencyId;
      
      // Counselor Assignment Rule
      allow write: if request.resource.data.role == 'membre' && isStaff() &&
                   (
                     // SuperAdmins/Admins can assign anyone of a non-superadmin role
                     (isAgencyAdmin(get(/databases/$(database)/documents/users/$(userId)).data.agencyId) && get(/databases/$(database)/documents/users/$(request.resource.data.counselorId)).data.role != 'superadmin') ||
                     // Counselors can assign themselves
                     (request.auth.uid == request.resource.data.counselorId)
                   );
    }
    
    match /users/{userId}/{path=**} {
      // Superadmins have access to subcollections.
      allow read, write: if isSuperAdmin();
      // Users can access their own subcollections.
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Fallback for other collections. This is for development.
    // Secure these rules before production.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
