
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    function isConseiller(userId) {
      return exists(/databases/$(database)/documents/users/$(userId)) && get(/databases/$(database)/documents/users/$(userId)).data.role == 'conseiller';
    }
    
    function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
    }

    function isTheirConseiller(resource) {
        return isSignedIn() && resource.data.counselorId == request.auth.uid;
    }

    // Platform-wide settings
    match /agencies/{agencyId} {
      allow get: if true; // Public read for personalization
      allow list, write, update, delete: if isSuperAdmin();
    }
    
    // Plans can be public (readable by all), or counselor-specific
    match /plans/{planId} {
      allow get, list: if resource.data.isPublic == true || (isConseiller(request.auth.uid) && request.query.counselorId == request.auth.uid);
      allow create: if isSuperAdmin() || (isConseiller(request.auth.uid) && request.resource.data.counselorId == request.auth.uid);
      allow update, delete: if isSuperAdmin() || (isConseiller(request.auth.uid) && resource.data.counselorId == request.auth.uid);
    }

    // GDPR and Support requests managed by superadmin
    match /gdpr_requests/{requestId} {
        allow create: if true;
        allow list, read, write, update, delete: if isSuperAdmin();
    }
    
    match /support_requests/{requestId} {
      allow create: if isSignedIn();
      allow list, read, write, update, delete: if isSuperAdmin();
    }
    
    // FAQ items can be general (superadmin) or counselor-specific
    match /faq_items/{itemId} {
      allow get: if true;
      allow list: if isSignedIn();
      allow create: if isSuperAdmin() || (isConseiller(request.auth.uid) && request.resource.data.counselorId == request.auth.uid);
      allow update, delete: if isSuperAdmin() || (isConseiller(request.auth.uid) && resource.data.counselorId == request.auth.uid);
    }
    
    // Users collection
    match /users/{userId} {
      // Allow creation for prospects/signups
      allow create: if true;
      
      // Read access:
      // - A counselor's profile is public.
      // - A user can read their own profile.
      // - A counselor can read their clients' profiles.
      // - A superadmin can read any profile.
      allow get: if resource.data.role == 'conseiller' 
                      || isOwner(userId) 
                      || isTheirConseiller(resource) 
                      || isSuperAdmin();
      
      // Allow public listing only when searching for counselors by their public profile name.
      // Counselors and admins can list their users.
      allow list: if (request.query.keys().hasAll(['role', 'publicProfileName']) && request.query.role == 'conseiller')
                  || isSuperAdmin() 
                  || isConseiller(request.auth.uid);
      
      // Write access
      // User can update their own profile (but not change role or counselorId)
      // Counselor can update their clients' profiles
      // Superadmin can do anything
      allow update: if (isOwner(userId) && request.resource.data.role == resource.data.role && request.resource.data.counselorId == resource.data.counselorId)
                      || (isConseiller(request.auth.uid) && resource.data.counselorId == request.auth.uid)
                      || isSuperAdmin();

      // Only superadmin can delete users for now (to prevent accidental data loss)
      allow delete: if isSuperAdmin() && resource.data.role != 'superadmin';

      // Subcollections are private to the user
      match /{allPaths=**} {
        allow read, write: if isOwner(userId) || isSuperAdmin();
      }
    }

    // Contracts are managed by counselors for themselves
    match /contracts/{contractId} {
      allow read, list: if isConseiller(request.auth.uid) && request.query.counselorId == request.auth.uid;
      allow create: if isConseiller(request.auth.uid) && request.resource.data.counselorId == request.auth.uid;
      allow update, delete: if isConseiller(request.auth.uid) && resource.data.counselorId == request.auth.uid;
      allow get: if isSuperAdmin(); // Superadmin can read any contract
    }

    // Quotes are managed by counselors
    match /quotes/{quoteId} {
        allow get: if true; // Public access for client validation
        allow list: if (isConseiller(request.auth.uid) && request.query.counselorId == request.auth.uid) || isSuperAdmin();
        allow create: if (isConseiller(request.auth.uid) && request.resource.data.counselorId == request.auth.uid) || isSuperAdmin();
        allow update: if (isConseiller(request.auth.uid) && resource.data.counselorId == request.auth.uid) || isSuperAdmin();
        allow delete: if (isConseiller(request.auth.uid) && resource.data.counselorId == request.auth.uid) || isSuperAdmin();
    }
    
    // Invoices are managed by counselors
    match /invoices/{invoiceId} {
        allow get, list: if (isConseiller(request.auth.uid) && (resource.data.counselorId == request.auth.uid || request.query.counselorId == request.auth.uid)) || isSuperAdmin();
        allow create: if (isConseiller(request.auth.uid) && request.resource.data.counselorId == request.auth.uid) || isSuperAdmin();
        allow update, delete: if (isConseiller(request.auth.uid) && resource.data.counselorId == request.auth.uid) || isSuperAdmin();
    }

    // Fallback for other collections. This is for development.
    // Secure these rules before production.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}

    