
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Règles de développement : Autoriser la lecture publique et l'écriture pour les utilisateurs authentifiés.
    // ATTENTION : Ne pas utiliser en production sans sécuriser les données sensibles.
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Règle spécifique pour les candidatures (autorise la création publique)
    match /job_applications/{applicationId} {
      allow create: if true;
    }

    // Garder une règle spécifique pour la création de messages de contact par des utilisateurs non authentifiés
    match /contact_messages/{messageId} {
      allow create: if true;
    }
  }
}
