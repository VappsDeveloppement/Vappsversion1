
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Règles Publiques ---
    // Ces collections autorisent des opérations spécifiques sans authentification.

    // Autoriser la création de candidatures par n'importe qui.
    match /job_applications/{applicationId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null; // Seuls les utilisateurs connectés peuvent gérer
    }

    // Autoriser la création de messages de contact par n'importe qui.
    match /contact_messages/{messageId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    
    // Autoriser la validation publique des devis
    match /quotes/{quoteId} {
        allow read: if true;
        allow update: if resource.data.status != write.resource.data.status;
    }

    // --- Règles pour les utilisateurs authentifiés ---
    match /{document=**} {
      // Par défaut, autoriser la lecture à tous (pour les pages publiques)
      // et l'écriture uniquement aux utilisateurs authentifiés.
      // Des règles plus spécifiques ci-dessous peuvent restreindre davantage ces accès.
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
