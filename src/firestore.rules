
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read for agency info, minisites and their routes
    match /agencies/{agencyId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    match /minisites/{counselorId} {
      allow read: if true;
      allow write: if request.auth != null && (request.auth.uid == counselorId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin');
    }

    // Secure user data:
    // A user can read/write their own data.
    // A superadmin can read/write any user's data.
    // A counselor can read data of their assigned users.
    match /users/{userId} {
      allow get: if request.auth != null && (
        request.auth.uid == userId 
        || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin'
        || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'conseiller' && request.auth.uid in resource.data.counselorIds)
      );
      // Allow superadmin and conseillers to list all users.
      allow list: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin' || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'conseiller');

      allow write: if request.auth != null && (
          request.auth.uid == userId 
          || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin'
          || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'conseiller'
      );
      
      // This rule allows users to access their own subcollections (quotes, invoices, etc.)
      match /{document=**} {
         allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /contact_messages/{messageId} {
      allow create: if true;
      allow read: if request.auth != null && 
                      (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin' && resource.data.recipientId == 'vapps-agency' ||
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'conseiller' && resource.data.recipientId == request.auth.uid);
      allow write: if request.auth != null && 
                      (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin' || 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'conseiller');
    }

    match /plans/{planId} {
        allow read: if true; // Plans can be public for pricing pages
        allow write: if request.auth != null; // Only authenticated (admin/conseiller) can write
    }

    match /contracts/{contractId} {
      allow read, write: if request.auth != null;
    }

    // Public validation page needs read. Delete should be restricted.
    match /quotes/{quoteId} {
        allow get: if true;
        allow write: if request.auth != null && request.resource.data.counselorId == request.auth.uid;
        allow delete: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin' || resource.data.counselorId == request.auth.uid);
        allow update: if true; // Allow client to accept/reject
    }
    
    match /invoices/{invoiceId} {
       allow read, write: if request.auth != null;
    }

    match /gdpr_requests/{requestId} {
        allow create: if true; // Allow public creation from contact forms
        allow read, write: if request.auth != null; // Admins can manage them
    }

    match /support_requests/{requestId} {
        allow create: if true; // Allow public creation
        allow read, write: if request.auth != null;
    }

    match /live_follow_up_requests/{requestId} {
        allow create: if true; // Anyone can create a request
        allow read, write: if request.auth != null && 
                           (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin' || 
                           resource.data.counselorId == request.auth.uid);
    }

    match /faq_items/{itemId} {
        allow read: if true;
        allow write: if request.auth != null;
    }

    match /beta_scenarios/{scenarioId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    match /beta_tests_results/{resultId} {
      allow create: if true; // Public testers can submit results
      allow list: if true; // Allow public list for stats
      allow get: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    match /blog_categories/{categoryId} {
        allow read: if true;
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    match /articles/{articleId} {
        allow read: if resource.data.status == 'published' || 
                       (request.auth != null && (resource.data.authorId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin'));
        allow create: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'conseiller' || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin');
        allow update: if request.auth != null && 
                         (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin' || 
                         (resource.data.authorId == request.auth.uid && request.resource.data.status != 'published'));
        allow delete: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin' || resource.data.authorId == request.auth.uid);
    }
    
    match /events/{eventId} {
      allow get: if resource.data.isPublic == true || (request.auth != null && (request.auth.uid == resource.data.counselorId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin'));
      allow list: if (request.query.keys().hasOnly(['where']) && request.query.where[0][0] == 'isPublic' && request.query.where[0][2] == true) || request.auth != null;

      allow create, delete: if request.auth != null && (request.auth.uid == request.resource.data.counselorId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin');
      
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['registrationsCount']) ||
                       (request.auth != null && (request.auth.uid == resource.data.counselorId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin'));

      match /registrations/{registrationId} {
        allow read, list: if request.auth != null && (get(/databases/$(database)/documents/events/$(eventId)).data.counselorId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin');
        allow create: if get(/databases/$(database)/documents/events/$(eventId)).data.isPublic == true;
        allow delete: if request.auth != null && (request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/events/$(eventId)).data.counselorId == request.auth.uid);
      }
      
      match /consultations/{consultationId} {
        allow read, list, create, update, delete: if request.auth != null && (get(/databases/$(database)/documents/events/$(eventId)).data.counselorId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin');
      }
    }
    
    match /tirageModels/{modelId} {
      allow read, list: if request.auth != null && (request.auth.uid == resource.data.counselorId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin');
      allow create: if request.auth != null && (request.resource.data.counselorId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin');
      allow update, delete: if request.auth != null && (request.auth.uid == resource.data.counselorId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin');
    }

    match /cardDecks/{deckId} {
      allow read, list: if request.auth != null && (resource.data.counselorId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin');
      allow create: if request.auth != null && (request.resource.data.counselorId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin');
      allow update, delete: if request.auth != null && (resource.data.counselorId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin');
      
      match /cards/{cardId} {
        allow read, list, create, update, delete: if request.auth != null && (get(/databases/$(database)/documents/cardDecks/$(deckId)).data.counselorId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin');
      }
    }
    
    match /clairvoyanceModels/{modelId} {
      allow read, list: if request.auth != null && (request.auth.uid == resource.data.counselorId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin');
      allow create: if request.auth != null && (request.resource.data.counselorId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin');
      allow update, delete: if request.auth != null && (request.auth.uid == resource.data.counselorId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin');
    }
  }
}

    