
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read for agency info, minisites and their routes
    match /agencies/{agencyId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.hasAny(['FULLACCESS']);
    }
    
    match /minisites/{counselorId} {
      allow read: if true;
      allow write: if request.auth != null && (request.auth.uid == counselorId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.hasAny(['FULLACCESS']));
    }

    match /users/{userId} {
      allow get: if request.auth != null && (
        request.auth.uid == userId 
        || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.hasAny(['FULLACCESS'])
        || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'conseiller' && userId in resource.data.counselorIds)
      );
      
      allow list: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.hasAny(['FULLACCESS']) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'conseiller');

      allow write: if request.auth != null && (
          request.auth.uid == userId 
          || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.hasAny(['FULLACCESS'])
      );
      
      match /{document=**} {
         allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /contact_messages/{messageId} {
      allow create: if true;
      allow read, write: if request.auth != null && 
                      (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.hasAny(['FULLACCESS']) || 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'conseiller');
    }

    match /plans/{planId} {
        allow read: if true; 
        allow write: if request.auth != null; 
    }

    match /contracts/{contractId} {
      allow read, write: if request.auth != null;
    }

    match /quotes/{quoteId} {
        allow get: if true;
        allow write: if request.auth != null;
        allow update: if true; 
    }
    
    match /invoices/{invoiceId} {
       allow read, write: if request.auth != null;
    }
    
    match /job_offers/{offerId} {
      allow read: if true;
      allow list: if true;
      allow create, update, delete: if request.auth != null;
    }

    match /job_applications/{applicationId} {
      allow create: if true;
      allow read, write: if request.auth != null;
    }

    match /gdpr_requests/{requestId} {
        allow create: if true;
        allow read, write: if request.auth != null;
    }

    match /support_requests/{requestId} {
        allow create: if true;
        allow read, write: if request.auth != null;
    }

    match /live_follow_up_requests/{requestId} {
        allow create: if true;
        allow read, write: if request.auth != null;
    }
    
    match /training_requests/{requestId} {
        allow create: if true;
        allow read, write: if request.auth != null;
    }

    match /faq_items/{itemId} {
        allow read: if true;
        allow write: if request.auth != null;
    }

    match /beta_scenarios/{scenarioId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.hasAny(['FULLACCESS']);
    }

    match /beta_tests_results/{resultId} {
      allow create: if true;
      allow read: if true;
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.hasAny(['FULLACCESS']);
    }

    match /blog_categories/{categoryId} {
        allow read: if true;
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.hasAny(['FULLACCESS']);
    }

    match /articles/{articleId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update: if request.auth != null && 
                         (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.hasAny(['FULLACCESS']) || 
                         (resource.data.authorId == request.auth.uid && request.resource.data.status != 'published'));
        allow delete: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.hasAny(['FULLACCESS']) || resource.data.authorId == request.auth.uid);
    }
    
    match /events/{eventId} {
      allow read: if true;
      allow list: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.hasAny(['FULLACCESS']) || request.auth.uid == resource.data.counselorId);

      match /registrations/{registrationId} {
        allow read, list: if request.auth != null;
        allow create: if true;
        allow delete: if request.auth != null;
      }
      
      match /consultations/{consultationId} {
        allow read, list, create, update, delete: if request.auth != null;
      }
    }
    
    match /tirageModels/{modelId} {
      allow read, list, create, update, delete: if request.auth != null;
    }

    match /cardDecks/{deckId} {
      allow read, list, create, update, delete: if request.auth != null;
      
      match /cards/{cardId} {
        allow read, list, create, update, delete: if request.auth != null;
      }
    }
    
    match /clairvoyanceModels/{modelId} {
      allow read, list, create, update, delete: if request.auth != null;
    }

    match /training_modules/{moduleId} {
      allow read, list, create, update, delete: if request.auth != null;
    }

    match /training_categories/{categoryId} {
        allow read, write: if request.auth != null;
    }
    
    match /trainings/{trainingId} {
        allow read: if true;
        allow write: if request.auth != null;
    }
    
    match /product_categories/{categoryId} {
        allow read, write: if request.auth != null;
    }

    match /products/{productId} {
        allow read: if true;
        allow create, update, delete: if request.auth != null;
    }

    match /protocols/{protocolId} {
        allow read, list, create, update, delete: if request.auth != null;
    }
  }
}
